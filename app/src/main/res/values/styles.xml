<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/ToolbarTitleColor</item>
        <item name="subtitleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:textColor">@color/ToolbarTitleColor</item>
        <item name="android:textColorSecondary">@color/ToolbarTitleColor</item>
        <item name="android:color">#FF0000</item>

        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogStyle">@style/DialogTheme</item>


    </style>






    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="subtitleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:textColorSecondary">@color/TestColor</item>

    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/PortBox</item>
    </style>



    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="windowActionBar">false</item>
        <item name="android:popupBackground">@color/MainboxColor</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->

        <!-- Set title color -->
        <item name="android:textColor">@color/TestColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <item name="android:popupBackground">@color/MainboxColor</item>
</style>



    <style name="PreferencesTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>

        <item name="colorAccent">@color/PortBox</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="android:background">@color/MainboxColor</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:dialogPreferenceStyle">@style/DialogTheme</item>
        <item name="android:button">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:windowBackground">@color/colorAccent</item>

        <item name="android:colorBackgroundCacheHint">@color/colorAccent</item>

    </style>
    <style name="DialogTheme" parent="Base.Theme.AppCompat.Dialog" >
        <item name="android:windowTitleStyle">@style/DialogStyle</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:editTextStyle">@style/DialogTheme.EditText</item>

    </style>

    <style name="DialogTheme.EditText" parent="Base.V12.Widget.AppCompat.EditText">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorActivatedHighlight">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>
    <style name="DialogTheme.EditText2" >
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorActivatedHighlight">@android:color/white</item>
    </style>
    <style name="DialogStyle" parent="AlertDialog.AppCompat" >
        <item name="android:textAppearance">@style/TextAppearance.DialogWindowTitle</item>
    </style>
    <style name="TextAppearance.DialogWindowTitle" parent="TextAppearance.DialogWindowTitle">>
        <item name="android:colorBackgroundCacheHint">@color/PortBox</item>
        <item name="android:textColorSecondary">@color/PortBox</item>
        <item name="android:background">#282828</item>
        <item name="colorAccent">@color/PortBox</item>
        <item name="android:textColor">@color/TestColor</item>
    </style>





    <style name="NavigationStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="android:background">@color/top_box_color</item>
        <item name="android:fontFamily">sans-serif-light"</item>
        <item name="android:textColor">@color/nav_text_color</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item><!-- item size in menu-->
        <item name="android:itemBackground">@color/PortBox</item>
    </style>

</resources>
